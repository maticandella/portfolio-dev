---
import type { AboutProps } from "../data";
import Section from "./Section.astro";

interface Props {
  about: AboutProps;
  title: string;
}

const { about, title } = Astro.props;
---

<Section text={title} href="about">
  <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
    {
      about.cards.map((card) => (
        <div class="border border-neutral-800 p-6 rounded-xl bg-neutral-900 text-left hover:shadow-lg transition">
          <div class="flex items-center gap-3 mb-4">
            <div class="bg-blue-900 bg-opacity-30 p-2 rounded-full">
              <img
                src={`/icons/${card.iconName}.svg`}
                alt={`${card.title} Icon`}
                class="w-8 h-8"
                loading="lazy"
              />
            </div>

            <div>
              <h3 class="text-lg font-semibold text-primary">{card.title}</h3>
              <span class="inline-block bg-blue-100 text-blue-800 text-xs px-2.5 py-0.5 rounded dark:bg-blue-900 dark:text-blue-300 whitespace-nowrap">
                {card.subtitle}
              </span>
            </div>
          </div>
          <p class="text-sm text-white">{card.description}</p>
        </div>
      ))
    }
  </div>
</Section>
