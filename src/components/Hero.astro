---
import type { HeroProps } from "../data";

type Props = HeroProps;

const { name, specialty, summary, email, buttons } = Astro.props;
---

<section
  class="py-24 md:py-32 min-h-screen"
  id="#hero"
  data-aos="flip-up"
  data-aos-duration="2000"
>
  <h1
    class="text-7xl font-serif mb-1.5 sm:text-8xl md:text-9xl md:mb-0 text-white font-bold tracking-tightest"
  >
    {name}
  </h1>

  <p
    class="text-neutral font-normal text-base md:text-lg mb-5"
    set:html={summary}
  />

  <!-- Botones de acción -->
  <div class="flex flex-wrap gap-2 mt-8 justify-end">
    <!-- Botón LinkedIn -->
    <a
      class="inline-flex items-center gap-2 text-sm w-full md:w-auto justify-center px-4 py-2 md:py-4 md:px-8 text-white font-medium leading-5 bg-blue-600 rounded-2xl md:rounded-full hover:bg-white hover:text-primary"
      href="https://www.linkedin.com/in/matiascandella/"
      target="_blank"
      rel="noopener noreferrer"
    >
      <svg
        class="w-5 h-5"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
      >
        <path
          d="M18.3362 18.339H15.6707V14.1622C15.6707 13.1662 15.6505 11.8845 14.2817 11.8845C12.892 11.8845 12.6797 12.9683 12.6797 14.0887V18.339H10.0142V9.75H12.5747V10.9207H12.6092C12.967 10.2457 13.837 9.53325 15.1367 9.53325C17.8375 9.53325 18.337 11.3108 18.337 13.6245V18.339H18.3362ZM7.00373 8.57475C6.14573 8.57475 5.45648 7.88025 5.45648 7.026C5.45648 6.1725 6.14648 5.47875 7.00373 5.47875C7.85873 5.47875 8.55173 6.1725 8.55173 7.026C8.55173 7.88025 7.85798 8.57475 7.00373 8.57475ZM8.34023 18.339H5.66723V9.75H8.34023V18.339ZM19.6697 3H4.32923C3.59498 3 3.00098 3.5805 3.00098 4.29675V19.7033C3.00098 20.4202 3.59498 21 4.32923 21H19.6675C20.401 21 21.001 20.4202 21.001 19.7033V4.29675C21.001 3.5805 20.401 3 19.6675 3H19.6697Z"
        ></path>
      </svg>
      LinkedIn
    </a>

    <!-- Botón GitHub -->
    <a
      class="inline-flex items-center gap-2 text-sm w-full md:w-auto justify-center px-4 py-2 md:py-4 md:px-8 text-white font-medium leading-5 bg-gray-800 rounded-2xl md:rounded-full hover:text-gray-800 hover:bg-white"
      href="https://github.com/maticandella/"
      target="_blank"
      rel="noopener noreferrer"
    >
      <svg
        class="w-5 h-5"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
      >
        <path
          d="M12.001 2C6.47598 2 2.00098 6.475 2.00098 12C2.00098 16.425 4.86348 20.1625 8.83848 21.4875C9.33848 21.575 9.52598 21.275 9.52598 21.0125C9.52598 20.775 9.51348 19.9875 9.51348 19.15C7.00098 19.6125 6.35098 18.5375 6.15098 17.975C6.03848 17.6875 5.55098 16.8 5.12598 16.5625C4.77598 16.375 4.27598 15.9125 5.11348 15.9C5.90098 15.8875 6.46348 16.625 6.65098 16.925C7.55098 18.4375 8.98848 18.0125 9.56348 17.75C9.65098 17.1 9.91348 16.6625 10.201 16.4125C7.97598 16.1625 5.65098 15.3 5.65098 11.475C5.65098 10.3875 6.03848 9.4875 6.67598 8.7875C6.57598 8.5375 6.22598 7.5125 6.77598 6.1375C6.77598 6.1375 7.61348 5.875 9.52598 7.1625C10.326 6.9375 11.176 6.825 12.026 6.825C12.876 6.825 13.726 6.9375 14.526 7.1625C16.4385 5.8625 17.276 6.1375 17.276 6.1375C17.826 7.5125 17.476 8.5375 17.376 8.7875C18.0135 9.4875 18.401 10.375 18.401 11.475C18.401 15.3125 16.0635 16.1625 13.8385 16.4125C14.201 16.725 14.5135 17.325 14.5135 18.2625C14.5135 19.6 14.501 20.675 14.501 21.0125C14.501 21.275 14.6885 21.5875 15.1885 21.4875C19.259 20.1133 21.9999 16.2963 22.001 12C22.001 6.475 17.526 2 12.001 2Z"
        ></path>
      </svg>
      GitHub
    </a>

    <!-- Botón Descargar CV -->
    {
      buttons?.[0] && buttons[0].trim() !== "" && (
        <a
          class="inline-flex items-center gap-2 text-sm w-full md:w-auto justify-center px-4 py-2 md:py-4 md:px-8 text-white font-medium leading-5 border border-primary rounded-2xl md:rounded-full hover:bg-primary hover:text-white"
          href="/docs/CV - Matias Candella.pdf"
          download
        >
          <svg
            class="w-5 h-5"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 24 24"
            fill="currentColor"
          >
            <path d="M16 2L21 7V21.0082C21 21.556 20.5551 22 20.0066 22H3.9934C3.44476 22 3 21.5447 3 21.0082V2.9918C3 2.44405 3.44495 2 3.9934 2H16ZM12 11.5C13.3807 11.5 14.5 10.3807 14.5 9C14.5 7.61929 13.3807 6.5 12 6.5C10.6193 6.5 9.5 7.61929 9.5 9C9.5 10.3807 10.6193 11.5 12 11.5ZM7.52746 17H16.4725C16.2238 14.75 14.3163 13 12 13C9.68372 13 7.77619 14.75 7.52746 17Z" />
          </svg>
          {buttons[0]}
        </a>
      )
    }

    <!-- Botón Contáctame -->
    <a
      class="inline-flex items-center gap-2 text-sm w-full md:w-auto justify-center px-4 py-2 md:py-4 md:px-8 text-blue-600 font-medium leading-5 bg-white rounded-2xl md:rounded-full hover:bg-blue-600 hover:text-white"
      href={`mailto:${email}`}
    >
      <svg
        class="w-5 h-5"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="currentColor"
      >
        <path
          d="M3 3H21C21.5523 3 22 3.44772 22 4V20C22 20.5523 21.5523 21 21 21H3C2.44772 21 2 20.5523 2 20V4C2 3.44772 2.44772 3 3 3ZM12.0606 11.6829L5.64722 6.2377L4.35278 7.7623L12.0731 14.3171L19.6544 7.75616L18.3456 6.24384L12.0606 11.6829Z"
        ></path>
      </svg>
      {buttons[1]}
    </a>
  </div>
</section>
