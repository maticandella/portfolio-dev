---
interface Props {
  text: string;
  href: string;
}

const { text, href } = Astro.props;
---

<section id={href} class="py-24">
  <h2
    class="text-4xl md:text-6xl font-serif font-bold tracking-tighter text-white mb-14"
    data-aos="flip-up"
    data-aos-duration="1000"
  >
    {text}
  </h2>
  <slot />
</section>
